---
import Layout from "../layouts/Layout.astro";
import Presentation from "../components/Presentation.astro";
import Readme from '../components/Readme.astro';
import Experience from "../components/Experience.astro";
---

<Layout title="Damián Huchín">
  <div class="stars twinkling clouds"/>
    <Presentation />
    <Readme/>
    <Experience/>
</Layout>

<style>
  .stars,
  .twinkling,
  .clouds {
    position: fixed;
    display: block;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100vh;
  }

  .stars {
    z-index: -1;
    background: #000 url("https://i.imgur.com/YKY28eT.png") repeat top;
	animation: move-twink-back 1000s linear infinite;
  }

  @keyframes move-twink-back {
    from {
      background-position: 0 0;
    }
    to {
      background-position: -10000px 5000px;
    }
  }

  @keyframes move-clouds-back {
    from {
      background-position: 0 0;
    }
    to {
      background-position: 10000px 0;
    }
  }
</style>
