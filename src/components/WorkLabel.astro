---
export interface Props {
  work: string;
  company: string;
  time: string;
  photo: string;
  color: string;
  icons: string[];
}

const { color, company, photo, time, work, icons } = Astro.props;
---

<div class="worklabel grid grid-cols-4 items-center">
  <img src={photo} alt={`${company} logo`} class="w-5/6 md:w-3/4 rounded-full aspect-square object-cover"/>
  <div class="col-span-3">
    <h3 class="font-bold md:text-lg">{work}</h3>
    <p>{company} {time}</p>
    <p class="stack">
      {icons.map((icon) => <i class={`bx ${icon}`} />)}
    </p>
  </div>
</div>

<style define:vars={{ color }}>
  p {
    margin: 0%;
    font-size: large;
  }

  .worklabel:hover > div > h3 {
    color: var(--color);
  }

  .stack {
    opacity: 0;
    transition: ease-out 200ms;
    margin-top: 8px;
    display: flex;
    gap: 6px;
  }

  .worklabel:hover > div > .stack {
    opacity: 1;
  }

</style>
