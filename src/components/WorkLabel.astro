---
export interface Props {
  work: string;
  company: string;
  time: string;
  photo: string;
  color: string;
  icons: string[];
  desc: string;
}

const { color, company, photo, time, work, icons, desc } = Astro.props;
---

<li class="mb-10 ms-4">
  <div
    class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white"
  >
  </div>
  <time class="mb-1 text-sm font-normal leading-none text-gray-100">
    {time}
  </time>
  <div class="flex gap-4 my-4">
    <img
      src={photo}
      alt={`${company} logo`}
      class="h-8 rounded-full aspect-square object-cover"
    />
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
      {company}
      <span class="font-normal text-sm">{work}</span>
    </h3>
  </div>
  <div class="worklabel grid grid-cols-4 items-center">
    <div class="col-span-3">
      <p>
        {desc}
      </p>
    </div>
  </div>
</li>
