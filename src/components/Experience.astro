    time: "Mar 2023 - Actual",
    work: "Software Engineer",
    icons: ["bx bxl-vuejs","bxl-react", "bxl-graphql", "bxl-typescript"],
  },
  {
    color: "#85c440",
    company: "99minutos",
    photo: "./images/works/99min.png",
    time: "Nov 2022 - Mar 2023",
    work: "Software Engineer",
    icons: ["bxl-react", "bx-server", "bx-check-shield", "bxl-typescript"],
  },
  {
    color: "#fd8898",
    company: "Around",
    photo: "./images/works/Around.png",
    time: "Abr 2022 - Nov 2022",
    work: "React Native Engineer Jr",
    icons: [
      "bxl-react",
      "bx-mobile-alt",
      "bxl-graphql",
      "bxl-firebase",
      "bx-check-shield",
